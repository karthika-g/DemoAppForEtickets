@{
    Layout = null; // Disable layout for simplicity
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            padding: 40px;
        }

        h1 {
            margin-bottom: 30px;
            text-align: center;
            color: #333;
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #666;
        }

        input[type="text"],
        button {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 16px;
        }

        input[type="text"] {
            background-color: #f9f9f9;
        }

        button {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }

        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Payment Details</h1>
        <a id="paymentForm">
            <label for="cardNumber">Card Number:</label>
            <input type="text" id="cardNumber" name="cardNumber" placeholder="Enter card number" required>

            <div class="cvvFields hidden">
                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" name="cvv" placeholder="CVV" required>
            </div>

            <div style="display: flex; justify-content: space-between;">
                <div style="flex: 0 0 48%;">
                    <label for="expiryMonth">Expiry Month:</label>
                    <input type="text" id="expiryMonth" name="expiryMonth" placeholder="MM" required>
                </div>
                <div style="flex: 0 0 48%;">
                    <label for="expiryYear">Expiry Year:</label>
                    <input type="text" id="expiryYear" name="expiryYear" placeholder="YYYY" required>
                </div>
            </div>

            <div class="text-right">
                <div class="btn-group">
                    <a class="btn btn-outline-primary" asp-action="CompleteOrder">
                        <button type="submit" class="btn btn-outline-primary">
                            Submit
                        </button>
                    </a>
                    <span style="padding: 0 5px;"></span>
                    <a class="btn btn-outline-success" asp-action="ShoppingCart">
                        Cancel
                    </a>
                </div>
            </div>

    
    </div>

    <script>
        document.getElementById('paymentForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the form from submitting normally

            // Perform client-side validation
            var cardNumber = document.getElementById('cardNumber').value;
            var cardHolderName = document.getElementById('cardHolderName').value;
            var expiryMonth = document.getElementById('expiryMonth').value;
            var expiryYear = document.getElementById('expiryYear').value;
            var cvv = document.getElementById('cvv').value;

  

            // Additional validation for cardholder name, expiry month/year, and CVV can be added here

            // If validation passes, submit the form
            document.getElementById('paymentForm').submit();
        });

       

        // Show CVV input field when card number is entered
        document.getElementById('cardNumber').addEventListener('input', function () {
            var cvvFields = document.querySelector('.cvvFields');
            if (this.value.length >= 13) {
                cvvFields.classList.remove('hidden');
            } else {
                cvvFields.classList.add('hidden');
            }
        });
    </script>
</body>
</html>
